+_write_file(void *buf, int len, const char *file_name)
+{
+    int ret, nwrite = 0;
+
+    FILE *fp = fopen(file_name, "wb");
+    if (!fp)
+    {
+        fprintf(stderr,"debug: file %s open failed\n", file_name);
+        return -1;
+    }
+
+    while (nwrite < len) {
+        ret = fwrite(buf + nwrite, 1, len - nwrite, fp);
+        if (!ret)
+                break;
+        nwrite += ret;
+    }
+
+    fclose(fp);
+    return 0;
+}
