+		return -1;
+	if (!wl_global_create(ec->wl_display, &config_switch_interface, 1,
+			  ec, bind_config_switch)){
+		fprintf(stderr, "error: failed to config_switch_global_create: %s\n", dlerror());
+		return -1;
+	}
+	return 0;
+}
